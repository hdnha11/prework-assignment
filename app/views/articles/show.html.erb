<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <p id="notice" class="text-success"><%= notice %></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-block">
          <h4 class="card-title"><%= @article.title %></h4>
          <p class="card-text"><%= markdown_render(@article.body).html_safe %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row m-t">
    <div class="col-sm-8">
      <ol class="breadcrumb">
        <li><%= link_to 'Edit', edit_article_path(@article) %></li>
        <li><%= link_to 'Back', articles_path %></li>
      </ol>
    </div>
  </div>
</div>
